{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "The user management service",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon -L src/server.ts",
    "build": "tsc",
    "format:fix": "npx prettier . --write",
    "format:check": "npx prettier . --check",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --watch --runInBand",
    "prepare": "husky",
    "start": "ts-node src/index.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate ./src/migration/migration -d ./src/config/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/config/data-source.ts"
  },
  "author": "Mohit Gupta <mohitgupta1630.mg@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "mock-jwks": "^1.0.10",
    "nock": "^13.5.6",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.1",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.18.1"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.2.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rsa-pem-to-jwk": "^1.1.3",
    "typeorm": "0.3.20",
    "winston": "^3.17.0"
  }
}
